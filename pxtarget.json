{
    "id": "stm32iotnode",
    "platformid": "codal",
    "nickname": "IoTNode",
    "name": "ST IoT-Node Express",
    "title": "ST IoT-Node Express - Blocks / Javascript editor",
    "description": "A Blocks / JavaScript code editor for the STM32L4 Discovery kit IoT node",
    "corepkg": "stm32-iot-node",
    "bundleddirs": [
        "libs/base",
        "libs/buttons",
        "libs/core",
        "libs/stm32-iot-node"
    ],

    "serial": {
        "useHF2": true,
        "useEditor": true,
        "log": true,
        "editorTheme": {
            "graphBackground": "#d9d9d9",
            "lineColors": [
                "#CC2936",
                "#FFC914",
                "#2EB7ED",
                "#FB48C7",
                "#08415C",
                "#C200C0"
            ]
        }
    },
    "simulator": {
        "autoRun": true,
        "streams": false,
        "aspectRatio": 1.0,
        "parts": true,
        "partsAspectRatio": 0.69,
        "instructions": true,
        "dynamicBoardDefinition": true,
        "enableTrace": true
    },
    "cloud": {
        "workspace": false,
        "packages": true,
        "sharing": true,
        "publishing": true,
        "importing": false,
        "preferredPackages": [],
        "githubPackages": true
    },
    "compile": {
        "isNative": true,
        "useUF2": true,
        "webUSB": false,
        "hasHex": true,
        "deployDrives": ".*",
        "deployFileMarker": "MBED.HTM",
        "driveName": "DIS_L4IOT",
        "openocdScript": "source [find interface/cmsis-dap.cfg]; set CHIPNAME at91samd21g18; source [find target/at91samdXX.cfg]",
        "flashChecksumAddr": 8372,
        "flashCodeAlign": 256,
        "floatingPoint": true,
        "taggedInts": true,
        "upgrades": []
    },
    "runtime": {
        "mathBlocks": true,
        "loopsBlocks": true,
        "logicBlocks": true,
        "variablesBlocks": true,
        "textBlocks": true,
        "listsBlocks": true,
        "functionBlocks": true,
        "onStartNamespace": "loops",
        "onStartColor": "#40bf4a",
        "onStartWeight": 100,
        "pauseUntilBlock": {
            "category": "loops"
        }
    },
    "compileService": {
        "buildEngine": "codal",
        "codalTarget": {
            "name": "codal-stm32-iot-node",
            "url": "https://github.com/LabAixBidouille-STM32/codal-stm32-iot-node",
            "branch": "master",
            "type": "git"
        },
        "codalBinary": "STM32_IOT_NODE",
        "yottaConfig": {
            "pxt": {
                "board": {
                    "id": "BOARD_ID_IOT_NODE"
                }
            }
        },
        "githubCorePackage": "lancaster-university/codal",
        "gittag": "v0.3.0",
        "serviceId": "codal2cp"
    },
    "appTheme": {
        "accentColor": "#0089BF",
        "logoUrl": "https://makecode.labaixbidouille.com",
        "logo": "./static/logo.svg",
        "docsLogo": "./static/logo.svg",
        "portraitLogo": "./static/logo.svg",
        "footerLogo": "./static/logo.svg",
        "organization": "Microsoft MakeCode",
        "organizationUrl": "https://makecode.com/",
        "organizationLogo": "./static/Microsoft-logo_rgb_c-gray-square.png",
        "organizationWideLogo": "./static/Microsoft-logo_rgb_c-white.png",
        "homeUrl": "https://makecode.labaixbidouille.com",
        "embedUrl": "https://makecode.labaixbidouille.com",
        "privacyUrl": "https://go.microsoft.com/fwlink/?LinkId=521839",
        "termsOfUseUrl": "https://go.microsoft.com/fwlink/?LinkID=206977",
        "githubUrl": "https://github.com/LabAixBidouille-STM32/pxt-stm32-iot-node/",
        "feedbackUrl": "https://github.com/LabAixBidouille-STM32/pxt-stm32-iot-node/issues",
        "betaUrl": "https://github.com/LabAixBidouille-STM32/pxt-stm32-iot-node/",
        "boardName": "STM32L4 Discovery kit IoT node",
        "driveDisplayName": "DIS_L4IOT",
        "showHomeScreen": true,
        "homeScreenHero": "./static/hero.png",
        "invertedMenu": true,
        "invertedToolbox": true,
        "invertedMonaco": true,
        "monacoToolbox": true,
        "selectLanguage": true,
        "highContrast": true,
        "simAnimationEnter": "roll in",
        "simAnimationExit": "roll out",
        "hasAudio": true,
        "disableBlockIcons": true,
        "socialOptions": {
            "twitterHandle": "labaixbidouille",
            "orgTwitterHandle": "MSMakeCode",
            "hashtags": "MakeCode"
        },
        "allowPackageExtensions": true,
        "extendEditor": true,
        "crowdinProject": "kindscript",
        "blocklyOptions": {
            "grid": {
                "spacing": 20,
                "length": 2,
                "colour": "rgba(189, 195, 199, 0.20)",
                "snap": true
            }
        },
        "blocklyColors": {
            "insertionMarker": "#FFFFFF",
            "insertionMarkerOpacity": 0.5
        },
        "blockColors": {
            "loops": "#40bf4a",
            "logic": "#4cbfe6",
            "math": "#9966ff",
            "variables": "#FF6680",
            "text": "#ffab19",
            "advanced": "#00272B",
            "functions": "#005a9e",
            "arrays": "#8A1C7C"
        }
    },

    "ignoreDocsErrors": true
}
